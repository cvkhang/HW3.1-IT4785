<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/studentListFragment">

    <!-- Fragment danh sách sinh viên -->
    <fragment
        android:id="@+id/studentListFragment"
        android:name="com.example.quan_ly_sinh_vien.StudentListFragment"
        android:label="Danh sách sinh viên"
        tools:layout="@layout/fragment_student_list">
        
        <action
            android:id="@+id/action_list_to_add"
            app:destination="@id/addStudentFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        
        <action
            android:id="@+id/action_list_to_detail"
            app:destination="@id/studentDetailFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>

    <!-- Fragment thêm sinh viên -->
    <fragment
        android:id="@+id/addStudentFragment"
        android:name="com.example.quan_ly_sinh_vien.AddStudentFragment"
        android:label="Thêm sinh viên"
        tools:layout="@layout/fragment_add_student" />

    <!-- Fragment chi tiết/cập nhật sinh viên -->
    <fragment
        android:id="@+id/studentDetailFragment"
        android:name="com.example.quan_ly_sinh_vien.StudentDetailFragment"
        android:label="Chi tiết sinh viên"
        tools:layout="@layout/fragment_student_detail">
        
        <argument
            android:name="studentId"
            app:argType="string" />
    </fragment>

</navigation>
